{% extends 'base.html.twig' %}

{% block title %}Index des personnages!{% endblock %}

{% block body %}
    {% for personnage in personnages %}
        <article>
        {# Cr√©ation d'un lien de index vers personnage.html.twig #}
            <a href="
                {{ path(
                    'app_personnage', 
                    {
                        'id': personnage.url|replace({
                            'https://swapi.py4e.com/api/people/': '', 
                                '/': ''
                        })
                    }
                ) }}"
            >
                {{ personnage.name }}
            </a>
        </article>
    {% endfor %}
{% endblock %}
